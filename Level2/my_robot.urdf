<?xml version="1.0"?>
<robot name="myBot">
    <material name="red">
        <color rgba="0.7 0 0 1" />
    </material>
        <material name="green">
        <color rgba="0 0.7 0 1" />
    </material>
        <material name="blue">
        <color rgba="0 0 0.7 1" />
    </material>

    <link name="base_footprint" />

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2" />
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <material name="red" />
        </visual>
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.1" rpy="0 0 0" />
        <axis xyz="1 0 0" />
    </joint> 

    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue" />
        </visual>
    </link>

    <joint name="base_left_wheel_joint" type="continuous"> 
        <parent link="base_link" />
        <child link="left_wheel_link" />
        <origin xyz="-0.15 0.225 0" rpy="1.57 0 0"/>
        <axis xyz="0 0 1" />
    </joint>

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue" />
        </visual>
    </link>

    <joint name="right_left_wheel_joint" type="continuous"> 
        <parent link="base_link" />
        <child link="right_wheel_link" />
        <origin xyz="-0.15 -0.225 0" rpy="1.57 0 0"/>
        <axis xyz="0 0 1" />
    </joint>

    <link name="castor_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="blue" />
        </visual>
    </link>

    <joint name="base_castor_wheel_joint" type="fixed"> 
        <parent link="base_link" />
        <child link="castor_wheel_link" />
        <origin xyz="0.2 0 -0.05" rpy="0 0 0"/>
        <axis xyz="1 0 0" />
    </joint>

</robot>